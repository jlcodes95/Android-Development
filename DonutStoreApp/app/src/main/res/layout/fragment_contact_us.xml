<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ContactUsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textAlignment="center"
            android:textSize="36sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We would love to hear from you!"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPTION 1: Call the store"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/onClickCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call store"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="OPTION 2: Send an SMS"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Enter your phone number"
                android:inputType="phone"/>

            <Button
                android:id="@+id/onClickSendSMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Text Message"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>